{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/packages/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Ready in"
        }
      }
    },
    {
      "label": "Backend: Activate & Run",
      "type": "shell",
      "command": "source venv/bin/activate && pip install -r requirements.txt && python src/scripts/extract_album_data.py",
      "options": {
        "cwd": "${workspaceFolder}/packages/backend"
      }
    },
    {
      "label": "Start All",
      "dependsOn": ["Frontend: Dev Server", "Backend: Activate & Run"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
